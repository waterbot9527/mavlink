<?xml version="1.0"?>
<mavlink>
  <!-- 可以包含 common.xml，这样就能继承所有标准消息 -->
  <include>common.xml</include>

  <!-- 一共8个电机， 0-3电机对应board_id=0, 4-7 对应 board_id = 1  -->
  <messages>
    <message id="20001" name="WBOT_CONTROL_MOTOR">
      <description>控制电机</description>
      <field type="uint8_t[8]" name="speed">motor 速度 取值  0-255 , 0 代表停止转速 </field>
      <field type="uint8_t[8]" name="direction">motor  转的方向: 0 反转， 非0 正转  </field>
    </message>
  <message id="20002" name="WBOT_CONTROL_LED">
      <description>控制led 灯 </description>
      <field type="uint8_t" name="led_id">led 的序号 </field>
      <field type="uint8_t" name="light_value">led 的亮度</field>
    </message>
  </messages>
</mavlink>

